<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddTypeActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm loại món mới"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="@color/orange_btn_nav"
        />
    <ImageView
        android:id="@+id/img_type"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/ed_nameType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên loại"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_addType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm mới"
        android:backgroundTint="@color/orange_btn_nav"
        android:layout_margin="10dp"
        />

</LinearLayout>